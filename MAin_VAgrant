Vagrant.configure("2") do |config|
  
  # VM1: Web Server (Ubuntu 24.04)
  config.vm.define "web" do |web|
    web.vm.box = "ubuntu-24.04-server"
    web.vm.network "private_network", type: "dhcp"
    web.vm.hostname = "webserver"
    web.vm.provider "virtualbox" do |vb|
      vb.memory = "1024"
      vb.cpus = 2
    end

    # Provisioning VM1
    web.vm.provision "shell", path: "installwebserver.sh"
  end

  # VM2: Database Server (Ubuntu 24.04)
  config.vm.define "db" do |db|
    db.vm.box = "ubuntu-24.04-server"
    db.vm.network "private_network", type: "dhcp"
    db.vm.hostname = "dbserver"
    db.vm.provider "virtualbox" do |vb|
      vb.memory = "1024"
      vb.cpus = 2
    end
    # Provisioning VM2
    db.vm.provision "shell", path: "installmysql.sh"
  end
end
